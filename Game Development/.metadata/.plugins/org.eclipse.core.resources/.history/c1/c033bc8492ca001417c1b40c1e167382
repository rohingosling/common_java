package rohin.gameengine;

public class EntityExample extends ECSEntity
{
    // Constructor/s
    
    public EntityExample ( ECSEngine owner )
    {   
        // Initialize ECS object parameters.
        
        this.id    = Constants.ENTITY_EXAMPLE;      // Unique entity ID.
        this.name  = "ENTITY_EXAMPLE_ENTITY";       // Internal fileName.        
        this.owner = owner;                         // PArent object. For in case we want to talk with the parent game engine.
        
        // Add components.
        
        this.addComponent ( Constants.COMPONENT_TRANSLATION,    new ComponentTranslation   () );
        this.addComponent ( Constants.COMPONENT_ROTATION,       new ComponentRotation      () );
        this.addComponent ( Constants.COMPONENT_PHYSICS,        new ComponentPhysics       () );
        this.addComponent ( Constants.COMPONENT_RESOURCE_IMAGE, new ComponentResourceSprite () );
    }
}

package rohin.gameengine.test;

public class TestFramework
{
    private static final int M_DEFAULT_A    = 0;
    private static final int M_DEFAULT_B    = 10;
    private static final int M_DEFAULT_STEP = 1;
    
    private int a;
    private int b;
    private int step;
    
    public int  geta ()        { return this.a; }
    public void seta ( int a ) { this.a = a; }
    
    public int  getb ()        { return this.b; }
    public void setb ( int b ) { this.b = b; }
    
    public int  getstep ()           { return this.step; }
    public void setstep ( int step ) { this.step = step; }
    
    public TestFramework ()
    {        
        this.a    = M_DEFAULT_A;
        this.b    = M_DEFAULT_B;
        this.step = M_DEFAULT_STEP;
    }
    
    public TestFramework ( int a, int b, int step )
    {        
        this.a    = a;
        this.b    = b;
        this.step = step;
    }
    
    public void run()
    {
        int a = this.a;
        int b = this.b;
        int s = this.step;
        
        for ( int x = a; x <= b; x+=s )
        {
            System.out.println( "Testing 123." );
        }
    }
}
